# KingdomScout - Environment Variables
# Copy this file to .env and fill in the values

# ==========================================
# REQUIRED
# ==========================================

# Database (Docker Compose auto-generates this, only set for external DB)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=saudi_deals
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/saudi_deals"

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET="change-me-to-a-random-64-char-string"

# Frontend URL (set to your actual domain in production)
FRONTEND_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3001"

# ==========================================
# OPTIONAL
# ==========================================

# Notifications
TELEGRAM_BOT_TOKEN=""
SENDGRID_API_KEY=""
EMAIL_FROM="alerts@kingdomscout.com"
ADMIN_TELEGRAM_CHAT_ID=""

# Scraper Settings
SCRAPE_INTERVAL_HOURS=4
LOG_LEVEL=INFO
